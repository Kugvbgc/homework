<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/bottom_curved"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="start"
            android:src="@drawable/img"
            android:padding="@dimen/_10sdp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="HOME WORK 232_3"
            android:textColor="#8BC34A"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/termInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:hint="Enter number of terms"
        android:inputType="number"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/leap"
        />

    <Button
        android:id="@+id/generateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/termInput"
        android:layout_margin="@dimen/_20sdp"
        android:text="Generate Series"
        android:background="#CD4545"
        />

    <TextView
        android:id="@+id/seriesOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/generateButton"
        android:layout_margin="@dimen/_20sdp"
        android:text=""
        android:textSize="@dimen/_20ssp"
        />

    <TextView
        android:id="@+id/seriesOutput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seriesOutput"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_20sdp"
        android:text=""
        android:textSize="@dimen/_20ssp"
        />

</LinearLayout>